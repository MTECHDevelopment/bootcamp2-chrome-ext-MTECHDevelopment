{
  "ci": {
    "collect": {
      "url": ["http://localhost:8080"],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": [
          "--no-sandbox",
          "--disable-gpu",
          "--disable-dev-shm-usage",
          "--disable-software-rasterizer",
          "--disable-extensions"
        ],
        "preset": "desktop",
        "onlyCategories": ["performance", "accessibility", "best-practices", "pwa", "seo"]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lighthouseci",
      "reportFilenamePattern": "report-%%TIMESTAMP%%.html"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.70 }],
        "categories:accessibility": ["warn", { "minScore": 0.75 }],
        "categories:best-practices": ["warn", { "minScore": 0.75 }],
        "categories:pwa": ["warn", { "minScore": 0.70 }],
        "categories:seo": ["warn", { "minScore": 0.75 }]
      }
    }
  }
}
